---
import { Image } from 'astro:assets';

interface Props {
	url?: string;
	alt?: string;
	title?: string;
	image?: string;
	description: string;
	children?: HTMLElement | HTMLElement[];
}

const {
	url = '#',
	alt = 'Project image',
	image = '#',
	description = 'Project Description',
	title = 'Project title',
} = Astro.props;
---

<section class="w-full p-4 md:w-1/2 lg:w-1/3">
	<article
		data-testId="card"
		class="rounded-xl p-3 shadow-lg duration-100 hover:scale-105 hover:transform hover:shadow-xl"
	>
		<a href={url} aria-label="link to project">
			<div class="relative flex items-end overflow-hidden rounded-xl">
				<Image src={image} alt={alt} format="png" width={400} height={400} loading="eager" />
			</div>
			<div class="mt-3 flex flex-col items-center p-2">
				<h3 class="text-xl text-sky-500 lg:text-3xl">{title}</h3>
				<p class="text-s text-center w-2/3 text-sky-300">{description}</p>
			</div>
		</a>
	</article>
</section>
