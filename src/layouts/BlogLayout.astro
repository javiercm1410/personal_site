---
interface Props {
	title: string;
	description?: string;
	image?: string;
	blogBanner?: string;
	blogAlt?: string;
}

const { title, description="Javier's personal blog", image="https://s3.amazonaws.com/javiercarrillo.dev/public/GoPet.png", blogBanner, blogAlt } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<link rel="icon" type="image/png" href="https://s3.amazonaws.com/javiercarrillo.dev/public/favicon.png" />
		<meta property="og:image" content={image}/>
		<title>{title}</title>
	</head>
	<body class="bg-sky-900 font-montserrat text-white xs:text-[20px] md:text-[24px]">
		<img 
			class="!w-full !max-w-none h-[25vh] object-cover" 
			src={blogBanner}
			alt={blogAlt}
		/>
		<div class="mx-auto max-w-screen-xl px-5">
			<slot />
		</div>
		<style is:global>
			/* Improve Page speed */
			/* https://css-tricks.com/almanac/properties/c/content-visibility/ */
			img {
				content-visibility: auto;
			}
		</style>
	</body>
</html>
